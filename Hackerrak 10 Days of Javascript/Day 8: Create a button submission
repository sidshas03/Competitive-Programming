js/button.js

window.onload = () => {
     const button = document.getElementById('btn');

     button.addEventListener('click', (e) => {
          const clicks = parseInt(e.currentTarget.innerText, 0) + 1;
          e.currentTarget.innerText = clicks;
     });  
}



css/button.css

#btn {
     display: block;
     width: 96px;
     height: 48px;
     font-size: 24px;    
}
